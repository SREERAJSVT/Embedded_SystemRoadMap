/* USER CODE BEGIN Header */
/**
  ******************************************************************************
  * @file           : main.c
  * @brief          : Optimized Environment Monitor (SHT41, SGP40, SSD1306)
  ******************************************************************************
  */
/* USER CODE END Header */
/* Includes ------------------------------------------------------------------*/
#include "main.h"
#include "cmsis_os.h"

/* Private includes ----------------------------------------------------------*/
/* USER CODE BEGIN Includes */
#include "ssd1306.h"
#include "ssd1306_fonts.h"
#include <stdio.h>
/* USER CODE END Includes */

/* Private typedef -----------------------------------------------------------*/
/* USER CODE BEGIN PTD */
typedef struct {
    float temp;
    float hum;
    uint16_t sraw_voc;
    int32_t voc_index;
} EnvData_t;
/* USER CODE END PTD */

/* Private variables ---------------------------------------------------------*/
I2C_HandleTypeDef hi2c1;
UART_HandleTypeDef huart2;

/* USER CODE BEGIN PV */
EnvData_t g_data = {0};

/* Task Handles */
osThreadId_t defaultTaskHandle;
osThreadId_t SensorTaskHandle;
osThreadId_t DisplayTaskHandle;
osSemaphoreId_t DataMutexHandle;

/* Thread Attributes */
const osThreadAttr_t defaultTask_attributes = {
  .name = "defaultTask",
  .stack_size = 128 * 4,
  .priority = (osPriority_t) osPriorityLow,
};

const osThreadAttr_t sens_attr = {
  .name = "Sensors",
  .priority = (osPriority_t) osPriorityHigh,
  .stack_size = 512 * 4
};

const osThreadAttr_t disp_attr = {
  .name = "Display",
  .priority = (osPriority_t) osPriorityNormal,
  .stack_size = 512 * 4
};

/* Sensor Addresses */
const uint8_t SHT4x_ADDR = 0x44 << 1;
const uint8_t SGP40_ADDR = 0x59 << 1;
/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_USART2_UART_Init(void);
static void MX_I2C1_Init(void);
void StartDefaultTask(void *argument);

/* USER CODE BEGIN PFP */
void StartSensorTask(void *argument);
void StartDisplayTask(void *argument);
uint8_t Sensirion_CRC8(uint8_t *data, uint8_t len);
/* USER CODE END PFP */

/* Private user code ---------------------------------------------------------*/
/* USER CODE BEGIN 0 */
uint8_t Sensirion_CRC8(uint8_t *data, uint8_t len) {
    uint8_t crc = 0xFF;
    for (uint8_t i = 0; i < len; i++) {
        crc ^= data[i];
        for (uint8_t j = 0; j < 8; j++) {
            if (crc & 0x80) crc = (crc << 1) ^ 0x31;
            else crc <<= 1;
        }
    }
    return crc;
}
/* USER CODE END 0 */

int main(void)
{
  HAL_Init();
  SystemClock_Config();

  /* Initialize all configured peripherals */
  MX_GPIO_Init();
  MX_USART2_UART_Init();
  MX_I2C1_Init();

  /* USER CODE BEGIN 2 */
  osKernelInitialize();

  /* Create Mutex for Global Data */
  DataMutexHandle = osSemaphoreNew(1, 1, NULL);

  /* Create Custom Threads */
  SensorTaskHandle  = osThreadNew(StartSensorTask, NULL, &sens_attr);
  DisplayTaskHandle = osThreadNew(StartDisplayTask, NULL, &disp_attr);
  defaultTaskHandle = osThreadNew(StartDefaultTask, NULL, &defaultTask_attributes);

  /* Start Scheduler */
  osKernelStart();
  /* USER CODE END 2 */

  while (1) { StartDisplayTask();}
}

/* USER CODE BEGIN 4 */
void StartSensorTask(void *argument) {
    uint8_t cmd_sht = 0xFD;
    uint8_t rx_sht[6];
    uint8_t cmd_sgp[8] = {0x26, 0x0F};
    uint8_t rx_sgp[3];

    TickType_t xLastWakeTime = xTaskGetTickCount();

    for(;;) {
        if (HAL_I2C_Master_Transmit(&hi2c1, SHT4x_ADDR, &cmd_sht, 1, 100) == HAL_OK) {
            vTaskDelay(pdMS_TO_TICKS(10));
            if (HAL_I2C_Master_Receive(&hi2c1, SHT4x_ADDR, rx_sht, 6, 100) == HAL_OK) {
                float t = -45.0f + 175.0f * (float)((rx_sht[0] << 8) | rx_sht[1]) / 65535.0f;
                float h = -6.0f + 125.0f * (float)((rx_sht[3] << 8) | rx_sht[4]) / 65535.0f;

                uint16_t h_ticks = (uint16_t)(h * 65535 / 100);
                uint16_t t_ticks = (uint16_t)((t + 45) * 65535 / 175);

                cmd_sgp[2] = h_ticks >> 8; cmd_sgp[3] = h_ticks & 0xFF;
                cmd_sgp[4] = Sensirion_CRC8(&cmd_sgp[2], 2);
                cmd_sgp[5] = t_ticks >> 8; cmd_sgp[6] = t_ticks & 0xFF;
                cmd_sgp[7] = Sensirion_CRC8(&cmd_sgp[5], 2);

                if (HAL_I2C_Master_Transmit(&hi2c1, SGP40_ADDR, cmd_sgp, 8, 100) == HAL_OK) {
                    vTaskDelay(pdMS_TO_TICKS(30));
                    if (HAL_I2C_Master_Receive(&hi2c1, SGP40_ADDR, rx_sgp, 3, 100) == HAL_OK) {
                        osSemaphoreAcquire(DataMutexHandle, osWaitForever);
                        g_data.temp = t;
                        g_data.hum = h;
                        g_data.sraw_voc = (rx_sgp[0] << 8) | rx_sgp[1];
                        g_data.voc_index = g_data.sraw_voc / 130;
                        osSemaphoreRelease(DataMutexHandle);
                    }
                }
            }
        }
        vTaskDelayUntil(&xLastWakeTime, pdMS_TO_TICKS(1000));
    }
}

void StartDisplayTask(void *argument) {
	/* USER CODE BEGIN 2 */
	    for(uint16_t i=1; i<128; i++) {
	        if(HAL_I2C_IsDeviceReady(&hi2c1, (uint16_t)(i<<1), 3, 5) == HAL_OK) {
	            HAL_GPIO_TogglePin(GPIOA, GPIO_PIN_5); // Blink LED
	            HAL_Delay(100);
	        }
	    }
	    /* USER CODE END 2 */
    char buf[64];
    ssd1306_Init();

    for(;;) {
        osSemaphoreAcquire(DataMutexHandle, osWaitForever);
        EnvData_t local = g_data;
        osSemaphoreRelease(DataMutexHandle);

        ssd1306_Fill(Black);
        sprintf(buf, "T:%.1fC H:%.1f%%", local.temp, local.hum);
        ssd1306_SetCursor(2, 0);
        ssd1306_WriteString(buf, Font_7x10, White);

        sprintf(buf, "VOC IDX: %ld", local.voc_index);
        ssd1306_SetCursor(2, 16);
        ssd1306_WriteString(buf, Font_11x18, White);
        ssd1306_UpdateScreen();

        int len = sprintf(buf, "%.2f,%.2f,%u,%ld\r\n",
                         local.temp, local.hum, local.sraw_voc, local.voc_index);
        HAL_UART_Transmit(&huart2, (uint8_t*)buf, len, 100);

        vTaskDelay(pdMS_TO_TICKS(500));
    }
}
/* USER CODE END 4 */

void StartDefaultTask(void *argument)
{
  for(;;) { osDelay(1000); }
}

void SystemClock_Config(void)
{
  RCC_OscInitTypeDef RCC_OscInitStruct = {0};
  RCC_ClkInitTypeDef RCC_ClkInitStruct = {0};

  __HAL_RCC_PWR_CLK_ENABLE();
  __HAL_PWR_VOLTAGESCALING_CONFIG(PWR_REGULATOR_VOLTAGE_SCALE3);

  RCC_OscInitStruct.OscillatorType = RCC_OSCILLATORTYPE_HSI;
  RCC_OscInitStruct.HSIState = RCC_HSI_ON;
  RCC_OscInitStruct.HSICalibrationValue = RCC_HSICALIBRATION_DEFAULT;
  RCC_OscInitStruct.PLL.PLLState = RCC_PLL_ON;
  RCC_OscInitStruct.PLL.PLLSource = RCC_PLLSOURCE_HSI;
  RCC_OscInitStruct.PLL.PLLM = 16;
  RCC_OscInitStruct.PLL.PLLN = 336;
  RCC_OscInitStruct.PLL.PLLP = RCC_PLLP_DIV4;
  RCC_OscInitStruct.PLL.PLLQ = 2;
  RCC_OscInitStruct.PLL.PLLR = 2;
  if (HAL_RCC_OscConfig(&RCC_OscInitStruct) != HAL_OK) { Error_Handler(); }

  RCC_ClkInitStruct.ClockType = RCC_CLOCKTYPE_HCLK|RCC_CLOCKTYPE_SYSCLK
                              |RCC_CLOCKTYPE_PCLK1|RCC_CLOCKTYPE_PCLK2;
  RCC_ClkInitStruct.SYSCLKSource = RCC_SYSCLKSOURCE_PLLCLK;
  RCC_ClkInitStruct.AHBCLKDivider = RCC_SYSCLK_DIV1;
  RCC_ClkInitStruct.APB1CLKDivider = RCC_HCLK_DIV2;
  RCC_ClkInitStruct.APB2CLKDivider = RCC_HCLK_DIV1;

  if (HAL_RCC_ClockConfig(&RCC_ClkInitStruct, FLASH_LATENCY_2) != HAL_OK) { Error_Handler(); }
}

static void MX_I2C1_Init(void)
{
  hi2c1.Instance = I2C1;
  hi2c1.Init.ClockSpeed = 100000;
  hi2c1.Init.DutyCycle = I2C_DUTYCYCLE_2;
  hi2c1.Init.OwnAddress1 = 0;
  hi2c1.Init.AddressingMode = I2C_ADDRESSINGMODE_7BIT;
  hi2c1.Init.DualAddressMode = I2C_DUALADDRESS_DISABLE;
  hi2c1.Init.OwnAddress2 = 0;
  hi2c1.Init.GeneralCallMode = I2C_GENERALCALL_DISABLE;
  hi2c1.Init.NoStretchMode = I2C_NOSTRETCH_DISABLE;
  if (HAL_I2C_Init(&hi2c1) != HAL_OK) { Error_Handler(); }
}

static void MX_USART2_UART_Init(void)
{
  huart2.Instance = USART2;
  huart2.Init.BaudRate = 115200;
  huart2.Init.WordLength = UART_WORDLENGTH_8B;
  huart2.Init.StopBits = UART_STOPBITS_1;
  huart2.Init.Parity = UART_PARITY_NONE;
  huart2.Init.Mode = UART_MODE_TX_RX;
  huart2.Init.HwFlowCtl = UART_HWCONTROL_NONE;
  huart2.Init.OverSampling = UART_OVERSAMPLING_16;
  if (HAL_UART_Init(&huart2) != HAL_OK) { Error_Handler(); }
}

static void MX_GPIO_Init(void)
{
  GPIO_InitTypeDef GPIO_InitStruct = {0};
  __HAL_RCC_GPIOC_CLK_ENABLE();
  __HAL_RCC_GPIOH_CLK_ENABLE();
  __HAL_RCC_GPIOA_CLK_ENABLE();
  __HAL_RCC_GPIOB_CLK_ENABLE();

  HAL_GPIO_WritePin(GPIOA, GPIO_PIN_5, GPIO_PIN_RESET);

  GPIO_InitStruct.Pin = GPIO_PIN_13;
  GPIO_InitStruct.Mode = GPIO_MODE_IT_FALLING;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  HAL_GPIO_Init(GPIOC, &GPIO_InitStruct);

  GPIO_InitStruct.Pin = GPIO_PIN_5;
  GPIO_InitStruct.Mode = GPIO_MODE_OUTPUT_PP;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_LOW;
  HAL_GPIO_Init(GPIOA, &GPIO_InitStruct);
}

void HAL_TIM_PeriodElapsedCallback(TIM_HandleTypeDef *htim)
{
  if (htim->Instance == TIM6) { HAL_IncTick(); }
}

void Error_Handler(void)
{
  __disable_irq();
  while (1) { }
}
