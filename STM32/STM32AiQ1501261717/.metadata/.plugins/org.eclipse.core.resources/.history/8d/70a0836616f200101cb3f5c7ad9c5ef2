/* USER CODE BEGIN PD */
#define SHT41_ADDR 0x44  // 7-bit address
#define SGP40_ADDR 0x59  // 7-bit address

// SHT41 Commands
#define SHT41_MEAS_HIGH_PRECISION 0xFD
/* USER CODE END PD */

/* Private macro -------------------------------------------------------------*/
/* USER CODE BEGIN PM */

/* USER CODE END PM */

/* Private variables ---------------------------------------------------------*/
I2C_HandleTypeDef hi2c1;
UART_HandleTypeDef huart2;

/* USER CODE BEGIN PV */
// Simple print function
void print_string(const char *str) {
    HAL_UART_Transmit(&huart2, (uint8_t*)str, strlen(str), HAL_MAX_DELAY);
}

// Simple print integer
void print_int(int value) {
    char buffer[12];
    sprintf(buffer, "%d", value);
    print_string(buffer);
}

// Simple print float (2 decimal places)
void print_float(float value) {
    int integer = (int)value;
    int decimal = (int)((value - integer) * 100);
    if(decimal < 0) decimal = -decimal;

    char buffer[20];
    sprintf(buffer, "%d.%02d", integer, decimal);
    print_string(buffer);
}

// Print hex value
void print_hex(uint32_t value, int digits) {
    char buffer[10];
    sprintf(buffer, "%0*lX", digits, value);
    print_string(buffer);
}

uint8_t sgp40_working = 0;
/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_USART2_UART_Init(void);
static void MX_I2C1_Init(void);
/* USER CODE BEGIN PFP */

// Read SHT41 Temperature and Humidity
HAL_StatusTypeDef SHT41_Read(float *temperature, float *humidity) {
    uint8_t cmd = SHT41_MEAS_HIGH_PRECISION;
    uint8_t data[6];

    // Send measurement command
    if(HAL_I2C_Master_Transmit(&hi2c1, SHT41_ADDR << 1, &cmd, 1, 100) != HAL_OK) {
        return HAL_ERROR;
    }

    // Wait for measurement
    HAL_Delay(10);

    // Read 6 bytes of data
    if(HAL_I2C_Master_Receive(&hi2c1, SHT41_ADDR << 1, data, 6, 100) != HAL_OK) {
        return HAL_ERROR;
    }

    // Convert temperature (first 2 bytes)
    uint16_t temp_raw = (data[0] << 8) | data[1];
    *temperature = -45.0f + (175.0f * temp_raw) / 65535.0f;

    // Convert humidity (bytes 3-4)
    uint16_t hum_raw = (data[3] << 8) | data[4];
    *humidity = -6.0f + (125.0f * hum_raw) / 65535.0f;

    // Clamp humidity
    if(*humidity < 0.0f) *humidity = 0.0f;
    if(*humidity > 100.0f) *humidity = 100.0f;

    return HAL_OK;
}

// SIMPLE DIRECT SGP40 READ (No initialization)
HAL_StatusTypeDef SGP40_DirectRead(uint16_t *raw_value) {
    uint8_t cmd[2] = {0x26, 0x0F};  // Measure raw command
    uint8_t data[3];
    HAL_StatusTypeDef status;

    // Clear any I2C errors
    __HAL_I2C_CLEAR_FLAG(&hi2c1, I2C_FLAG_AF);
    __HAL_I2C_CLEAR_FLAG(&hi2c1, I2C_FLAG_BERR);
    __HAL_I2C_CLEAR_FLAG(&hi2c1, I2C_FLAG_ARLO);

    // Send command
    status = HAL_I2C_Master_Transmit(&hi2c1, SGP40_ADDR << 1, cmd, 2, 100);
    if(status != HAL_OK) {
        return status;
    }

    // Wait for measurement (30ms for SGP40)
    HAL_Delay(50);

    // Read result
    status = HAL_I2C_Master_Receive(&hi2c1, SGP40_ADDR << 1, data, 3, 100);
    if(status != HAL_OK) {
        return status;
    }

    *raw_value = (data[0] << 8) | data[1];

    // Validate range
    if(*raw_value < 10000 || *raw_value > 60000) {
        return HAL_ERROR;
    }

    return HAL_OK;
}

// I2C Scanner with detailed info
void I2C_Scan(void) {
    uint8_t i, found = 0;

    print_string("I2C Scanner:\r\n");
    print_string("------------\r\n");

    for(i = 1; i < 128; i++) {
        if(HAL_I2C_IsDeviceReady(&hi2c1, i << 1, 3, 50) == HAL_OK) {
            print_string("  Device found at 0x");
            print_hex(i, 2);
            print_string(" (");

            // Identify common devices
            switch(i) {
                case 0x44: print_string("SHT4x"); break;
                case 0x59: print_string("SGP40"); break;
                case 0x3C: print_string("OLED/Other"); break;
                case 0x76: print_string("BME280"); break;
                case 0x77: print_string("BMP280"); break;
                default: print_string("Unknown"); break;
            }

            print_string(")\r\n");
            found++;
        }
    }

    if(found == 0) {
        print_string("  No I2C devices found!\r\n");
    } else {
        print_string("  Total: ");
        print_int(found);
        print_string(" device(s)\r\n");
    }
    print_string("\r\n");
}

// Test basic I2C communication
void Test_I2C_Basics(void) {
    uint8_t test_byte = 0;

    print_string("I2C Basic Tests:\r\n");
    print_string("----------------\r\n");

    // Test SHT41
    print_string("  SHT41 (0x44): ");
    if(HAL_I2C_IsDeviceReady(&hi2c1, SHT41_ADDR << 1, 3, 50) == HAL_OK) {
        print_string("ACK OK");
        // Try to send a command
        uint8_t cmd = 0xFD;
        if(HAL_I2C_Master_Transmit(&hi2c1, SHT41_ADDR << 1, &cmd, 1, 50) == HAL_OK) {
            print_string(", Comm OK\r\n");
        } else {
            print_string(", Comm FAIL\r\n");
        }
    } else {
        print_string("No ACK\r\n");
    }

    // Test SGP40
    print_string("  SGP40 (0x59): ");
    if(HAL_I2C_IsDeviceReady(&hi2c1, SGP40_ADDR << 1, 3, 50) == HAL_OK) {
        print_string("ACK OK");
        // Try to send a simple command (soft reset)
        uint8_t cmd[2] = {0x00, 0x06};
        if(HAL_I2C_Master_Transmit(&hi2c1, SGP40_ADDR << 1, cmd, 2, 50) == HAL_OK) {
            print_string(", Comm OK\r\n");
            sgp40_working = 1;
        } else {
            print_string(", Comm FAIL\r\n");
        }
    } else {
        print_string("No ACK\r\n");
    }

    print_string("\r\n");
}

// Quick hardware test
void Hardware_Test(void) {
    print_string("Hardware Status:\r\n");
    print_string("----------------\r\n");

    // Check if I2C pins are configured correctly
    print_string("  I2C1: SCL=PB8, SDA=PB9\r\n");

    // Test GPIO pins
    print_string("  Testing GPIO... ");

    // Configure SDA as output temporarily to test
    GPIO_InitTypeDef GPIO_Test = {0};
    GPIO_Test.Pin = GPIO_PIN_9;  // SDA (PB9)
    GPIO_Test.Mode = GPIO_MODE_OUTPUT_PP;
    GPIO_Test.Pull = GPIO_NOPULL;
    GPIO_Test.Speed = GPIO_SPEED_FREQ_LOW;
    HAL_GPIO_Init(GPIOB, &GPIO_Test);

    // Blink SDA line
    for(int i = 0; i < 3; i++) {
        HAL_GPIO_WritePin(GPIOB, GPIO_PIN_9, GPIO_PIN_SET);
        HAL_Delay(100);
        HAL_GPIO_WritePin(GPIOB, GPIO_PIN_9, GPIO_PIN_RESET);
        HAL_Delay(100);
    }
    print_string("OK\r\n");

    // Reconfigure as I2C
    GPIO_Test.Pin = GPIO_PIN_8 | GPIO_PIN_9;  // SCL and SDA
    GPIO_Test.Mode = GPIO_MODE_AF_OD;
    GPIO_Test.Pull = GPIO_PULLUP;
    GPIO_Test.Speed = GPIO_SPEED_FREQ_VERY_HIGH;
    GPIO_Test.Alternate = GPIO_AF4_I2C1;
    HAL_GPIO_Init(GPIOB, &GPIO_Test);

    print_string("\r\n");
}

