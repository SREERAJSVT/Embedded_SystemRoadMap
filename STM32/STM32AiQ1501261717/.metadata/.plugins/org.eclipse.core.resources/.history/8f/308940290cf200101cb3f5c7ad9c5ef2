/* USER CODE BEGIN PFP */

// Function to send data via UART
void print_uart(const char* format, ...) {
    char buffer[128];
    va_list args;
    va_start(args, format);
    int len = vsnprintf(buffer, sizeof(buffer), format, args);
    va_end(args);
    HAL_UART_Transmit(&huart2, (uint8_t*)buffer, len, HAL_MAX_DELAY);
}

// I2C Scanner to detect devices
void I2C_Scanner(void) {
    uint8_t error, address;
    uint8_t devices_found = 0;

    print_uart("\r\nScanning I2C Bus...\r\n");

    for(address = 1; address < 127; address++) {
        HAL_Delay(1);

        // Skip reserved addresses
        if(address == 0x00 || address == 0x01 || address == 0x02 ||
           address == 0x03 || address == 0x04 || address == 0x05 ||
           address == 0x06 || address == 0x07) continue;

        error = HAL_I2C_IsDeviceReady(&hi2c1, address << 1, 2, 2);

        if(error == HAL_OK) {
            print_uart("Device found at 0x%02X (7-bit: 0x%02X)\r\n", address << 1, address);
            devices_found++;

            // Identify common sensors
            switch(address) {
                case 0x44: print_uart("  -> Likely SHT4x sensor\r\n"); break;
                case 0x59: print_uart("  -> Likely SGP40 sensor\r\n"); break;
                case 0x76:
                case 0x77: print_uart("  -> Likely BMP280/BME280 sensor\r\n"); break;
            }
        }
    }

    if(devices_found == 0) {
        print_uart("No I2C devices found!\r\n");
    } else {
        print_uart("Found %d device(s)\r\n\r\n", devices_found);
    }
}

// Reset I2C bus
void I2C_Reset(void) {
    // Generate STOP condition
    hi2c1.Instance->CR1 |= I2C_CR1_STOP;
    while(hi2c1.Instance->CR1 & I2C_CR1_STOP);

    // Reset I2C peripheral
    __HAL_RCC_I2C1_FORCE_RESET();
    HAL_Delay(10);
    __HAL_RCC_I2C1_RELEASE_RESET();

    // Re-initialize
    MX_I2C1_Init();
    print_uart("I2C Bus Reset\r\n");
}

// Soft Reset SHT41
HAL_StatusTypeDef SHT41_SoftReset(void) {
    uint8_t cmd = SHT41_SOFT_RESET;

    if(HAL_I2C_Master_Transmit(&hi2c1, SHT41_ADDR << 1, &cmd, 1, 100) != HAL_OK) {
        return HAL_ERROR;
    }

    HAL_Delay(10);  // Soft reset takes 1ms
    return HAL_OK;
}

// Read SHT41 with detailed error reporting
HAL_StatusTypeDef SHT41_Read(float *temperature, float *humidity) {
    uint8_t cmd = SHT41_MEAS_HIGH_PRECISION;
    uint8_t data[6];
    HAL_StatusTypeDef status;

    // Send measurement command
    status = HAL_I2C_Master_Transmit(&hi2c1, SHT41_ADDR << 1, &cmd, 1, 100);
    if(status != HAL_OK) {
        print_uart("SHT41 TX Error: %d\r\n", status);
        return status;
    }

    // Wait for measurement (9ms typical for high precision)
    HAL_Delay(10);

    // Read 6 bytes of data
    status = HAL_I2C_Master_Receive(&hi2c1, SHT41_ADDR << 1, data, 6, 100);
    if(status != HAL_OK) {
        print_uart("SHT41 RX Error: %d\r\n", status);
        return status;
    }

    // Debug raw data
    debug_counter++;
    if(debug_counter % 10 == 0) {  // Print raw data every 10 readings
        print_uart("SHT41 Raw: ");
        for(int i = 0; i < 6; i++) {
            print_uart("%02X ", data[i]);
        }
        print_uart("\r\n");
    }

    // Check if data is all zeros or invalid
    if(data[0] == 0 && data[1] == 0 && data[3] == 0 && data[4] == 0) {
        print_uart("SHT41 Invalid Data (all zeros)\r\n");
        return HAL_ERROR;
    }

    // Convert temperature (first 2 bytes)
    uint16_t temp_raw = (data[0] << 8) | data[1];
    float temp = -45.0f + 175.0f * ((float)temp_raw / 65535.0f);

    // Check CRC for temperature
    uint8_t crc_calc = CRC8(data, 2);
    if(crc_calc != data[2]) {
        print_uart("SHT41 Temp CRC Error: Got %02X, Calc %02X\r\n", data[2], crc_calc);
    }

    // Convert humidity (bytes 3-4)
    uint16_t hum_raw = (data[3] << 8) | data[4];
    float hum = -6.0f + 125.0f * ((float)hum_raw / 65535.0f);

    // Check CRC for humidity
    crc_calc = CRC8(&data[3], 2);
    if(crc_calc != data[5]) {
        print_uart("SHT41 Hum CRC Error: Got %02X, Calc %02X\r\n", data[5], crc_calc);
    }

    // Validate ranges
    if(temp < -40.0f || temp > 125.0f) {
        print_uart("SHT41 Temp out of range: %.2fC\r\n", temp);
        return HAL_ERROR;
    }

    // Clamp humidity
    if(hum < 0.0f) hum = 0.0f;
    if(hum > 100.0f) hum = 100.0f;

    *temperature = temp;
    *humidity = hum;

    return HAL_OK;
}

// SGP40 Self-test with improved handling
HAL_StatusTypeDef SGP40_SelfTest(void) {
    uint8_t cmd[2] = {SGP40_MEASURE_TEST >> 8, SGP40_MEASURE_TEST & 0xFF};
    uint8_t data[3];
    HAL_StatusTypeDef status;

    // Send self-test command
    status = HAL_I2C_Master_Transmit(&hi2c1, SGP40_ADDR << 1, cmd, 2, 100);
    if(status != HAL_OK) {
        print_uart("SGP40 Self-test TX Error: %d\r\n", status);
        return status;
    }

    // Self-test takes 250ms
    HAL_Delay(300);

    // Read result
    status = HAL_I2C_Master_Receive(&hi2c1, SGP40_ADDR << 1, data, 3, 100);
    if(status != HAL_OK) {
        print_uart("SGP40 Self-test RX Error: %d\r\n", status);
        return status;
    }

    // Check CRC
    uint8_t crc_calc = CRC8(data, 2);
    if(crc_calc != data[2]) {
        print_uart("SGP40 Self-test CRC Error: Got %02X, Calc %02X\r\n", data[2], crc_calc);
        return HAL_ERROR;
    }

    uint16_t result = (data[0] << 8) | data[1];
    print_uart("SGP40 Self-test raw: 0x%04X\r\n", result);

    if(result == 0xD400) {
        return HAL_OK;
    } else {
        return HAL_ERROR;
    }
}

// SGP40 Read with improved handling
HAL_StatusTypeDef SGP40_ReadRaw(uint16_t *voc_raw) {
    uint8_t cmd[2] = {SGP40_MEASURE_RAW >> 8, SGP40_MEASURE_RAW & 0xFF};
    uint8_t data[3];
    HAL_StatusTypeDef status;

    // Send measure raw command
    status = HAL_I2C_Master_Transmit(&hi2c1, SGP40_ADDR << 1, cmd, 2, 100);
    if(status != HAL_OK) {
        return status;
    }

    // Wait for measurement (30ms)
    HAL_Delay(50);

    // Read result
    status = HAL_I2C_Master_Receive(&hi2c1, SGP40_ADDR << 1, data, 3, 100);
    if(status != HAL_OK) {
        return status;
    }

    // Check CRC
    uint8_t crc_calc = CRC8(data, 2);
    if(crc_calc != data[2]) {
        print_uart("SGP40 CRC Error (raw: %02X %02X %02X)\r\n", data[0], data[1], data[2]);
        return HAL_ERROR;
    }

    *voc_raw = (data[0] << 8) | data[1];

    // Check for error values
    if(*voc_raw == 0xFFFF || *voc_raw == 0x0000 || *voc_raw == 0xD400) {
        return HAL_ERROR;
    }

    return HAL_OK;
}

// SGP40 Soft Reset
HAL_StatusTypeDef SGP40_SoftReset(void) {
    uint8_t cmd[2] = {SGP40_SOFT_RESET >> 8, SGP40_SOFT_RESET & 0xFF};

    if(HAL_I2C_Master_Transmit(&hi2c1, SGP40_ADDR << 1, cmd, 2, 100) != HAL_OK) {
        return HAL_ERROR;
    }

    HAL_Delay(50);  // Give time for reset
    return HAL_OK;
}
