/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{
  /* USER CODE BEGIN 1 */

  /* USER CODE END 1 */

  /* MCU Configuration--------------------------------------------------------*/

  /* Reset of all peripherals, Initializes the Flash interface and the Systick. */
  HAL_Init();

  /* USER CODE BEGIN Init */

  /* USER CODE END Init */

  /* Configure the system clock */
  SystemClock_Config();

  /* USER CODE BEGIN SysInit */

  /* USER CODE END SysInit */

  /* Initialize all configured peripherals */
  MX_GPIO_Init();
  MX_USART2_UART_Init();
  MX_I2C1_Init();
  /* USER CODE BEGIN 2 */

  float temperature = 0, humidity = 0;
  uint16_t voc_raw = 0;
  uint8_t sht41_ok = 0, sgp40_ok = 0;

  // Initialize LED for debugging
  HAL_GPIO_WritePin(LD2_GPIO_Port, LD2_Pin, GPIO_PIN_SET);
  HAL_Delay(500);
  HAL_GPIO_WritePin(LD2_GPIO_Port, LD2_Pin, GPIO_PIN_RESET);

  print_uart("\r\n===== SGP40 & SHT41 Sensor Test =====\r\n");
  print_uart("STM32 I2C Debug Tool\r\n");
  print_uart("=====================\r\n\r\n");

  // Wait for sensors to power up (SGP40 needs 10s for stable readings)
  print_uart("Powering up sensors (waiting 2 seconds)...\r\n");
  HAL_Delay(2000);

  // I2C Bus Scan
  I2C_Scanner();

  // Test SHT41
  print_uart("\r\nTesting SHT41...\r\n");
  if(SHT41_SoftReset() == HAL_OK) {
      print_uart("SHT41 Soft Reset OK\r\n");
      HAL_Delay(10);

      // Try to read 3 times
      for(int i = 0; i < 3; i++) {
          if(SHT41_Read(&temperature, &humidity) == HAL_OK) {
              sht41_ok = 1;
              print_uart("SHT41 Initialized - Temp: %.2f°C, Hum: %.2f%%\r\n",
                        temperature, humidity);
              break;
          }
          HAL_Delay(100);
      }
  }

  if(!sht41_ok) {
      print_uart("SHT41 Failed to initialize\r\n");
  }

  // Test SGP40
  print_uart("\r\nTesting SGP40...\r\n");
  if(SGP40_SoftReset() == HAL_OK) {
      print_uart("SGP40 Soft Reset OK\r\n");
      HAL_Delay(50);

      // Self-test
      if(SGP40_SelfTest() == HAL_OK) {
          sgp40_ok = 1;
          print_uart("SGP40 Self-test PASSED\r\n");
      } else {
          print_uart("SGP40 Self-test FAILED - Continuing anyway\r\n");
      }

      // Try to read
      HAL_Delay(100);
      if(SGP40_ReadRaw(&voc_raw) == HAL_OK) {
          print_uart("SGP40 First Read: %d\r\n", voc_raw);
          sgp40_ok = 1;
      }
  }

  if(!sgp40_ok) {
      print_uart("SGP40 May not be responding correctly\r\n");
  }

  print_uart("\r\n=====================\r\n");
  print_uart("Starting continuous readings...\r\n");
  print_uart("=====================\r\n\r\n");

  uint32_t last_reset = HAL_GetTick();
  uint8_t error_count = 0;

  /* USER CODE END 2 */

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
  while (1)
  {
      // Toggle LED to show program is running
      HAL_GPIO_TogglePin(LD2_GPIO_Port, LD2_Pin);

      // Reset I2C bus if too many errors or every 60 seconds
      if(error_count > 10 || (HAL_GetTick() - last_reset) > 60000) {
          I2C_Reset();
          error_count = 0;
          last_reset = HAL_GetTick();
          HAL_Delay(100);
      }

      // Read SHT41
      if(SHT41_Read(&temperature, &humidity) == HAL_OK) {
          print_uart("[%lu] SHT41 - Temp: %.2f°C, Hum: %.2f%%\r\n",
                    HAL_GetTick()/1000, temperature, humidity);
          error_count = 0;
      } else {
          print_uart("[%lu] SHT41 Read Error!\r\n", HAL_GetTick()/1000);
          error_count++;
      }

      // Read SGP40
      if(SGP40_ReadRaw(&voc_raw) == HAL_OK) {
          // Valid SGP40 readings are typically between 20000 and 60000
          if(voc_raw >= 10000 && voc_raw <= 60000) {
              float tvoc_ppb = (voc_raw - 20000) / 20.0f;
              if(tvoc_ppb < 0) tvoc_ppb = 0;

              print_uart("[%lu] SGP40 - Raw: %d, TVOC: %.1f ppb\r\n",
                        HAL_GetTick()/1000, voc_raw, tvoc_ppb);
              error_count = 0;
          } else {
              print_uart("[%lu] SGP40 - Invalid raw value: %d\r\n",
                        HAL_GetTick()/1000, voc_raw);
              error_count++;
          }
      } else {
          print_uart("[%lu] SGP40 Read Error!\r\n", HAL_GetTick()/1000);
          error_count++;
      }

      print_uart("-------------------\r\n\r\n");

      HAL_Delay(2000); // 2 second delay between readings
    /* USER CODE END WHILE */

    /* USER CODE BEGIN 3 */
  }
  /* USER CODE END 3 */
}

