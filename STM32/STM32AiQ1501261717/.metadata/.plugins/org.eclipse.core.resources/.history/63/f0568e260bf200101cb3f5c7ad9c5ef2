/* Private define ------------------------------------------------------------*/
/* USER CODE BEGIN PD */
#define SHT41_ADDR 0x44  // (0x44 << 1) 8-bit format
#define SGP40_ADDR 0x59  // (0x59 << 1) 8-bit format

// SHT41 Commands
#define SHT41_MEAS_HIGH_PRECISION 0xFD
#define SHT41_SOFT_RESET 0x94

// SGP40 Commands
#define SGP40_MEASURE_RAW 0x260F
#define SGP40_MEASURE_TEST 0x280E
#define SGP40_HEATER_OFF 0x3615
#define SGP40_SOFT_RESET 0x0006
/* USER CODE END PD */

/* Private macro -------------------------------------------------------------*/
/* USER CODE BEGIN PM */

/* USER CODE END PM */

/* Private variables ---------------------------------------------------------*/
I2C_HandleTypeDef hi2c1;
UART_HandleTypeDef huart2;

/* USER CODE BEGIN PV */
// CRC8 function for SGP40 (Polynomial: 0x31, Initialization: 0xFF)
uint8_t CRC8(uint8_t *data, uint8_t len) {
    uint8_t crc = 0xFF;
    for(uint8_t i = 0; i < len; i++) {
        crc ^= data[i];
        for(uint8_t bit = 0; bit < 8; bit++) {
            if(crc & 0x80) {
                crc = (crc << 1) ^ 0x31;
            } else {
                crc <<= 1;
            }
        }
    }
    return crc;
}
/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_USART2_UART_Init(void);
static void MX_I2C1_Init(void);
/* USER CODE BEGIN PFP */

// Function to send data via UART
void print_uart(const char* format, ...) {
    char buffer[128];
    va_list args;
    va_start(args, format);
    int len = vsnprintf(buffer, sizeof(buffer), format, args);
    va_end(args);
    HAL_UART_Transmit(&huart2, (uint8_t*)buffer, len, HAL_MAX_DELAY);
}

// Check if SHT41 is responding
HAL_StatusTypeDef SHT41_Check(void) {
    uint8_t cmd[1] = {SHT41_SOFT_RESET};
    return HAL_I2C_Master_Transmit(&hi2c1, SHT41_ADDR, cmd, 1, 100);
}

// Read SHT41 Temperature and Humidity
HAL_StatusTypeDef SHT41_Read(float *temperature, float *humidity) {
    uint8_t cmd = SHT41_MEAS_HIGH_PRECISION;
    uint8_t data[6];

    // Send measurement command
    if(HAL_I2C_Master_Transmit(&hi2c1, SHT41_ADDR, &cmd, 1, 100) != HAL_OK) {
        return HAL_ERROR;
    }

    // Wait for measurement
    HAL_Delay(10);

    // Read 6 bytes of data
    if(HAL_I2C_Master_Receive(&hi2c1, SHT41_ADDR, data, 6, 100) != HAL_OK) {
        return HAL_ERROR;
    }

    // Convert temperature
    uint16_t temp_raw = (data[0] << 8) | data[1];
    *temperature = -45.0f + 175.0f * ((float)temp_raw / 65535.0f);

    // Convert humidity
    uint16_t hum_raw = (data[3] << 8) | data[4];
    *humidity = -6.0f + 125.0f * ((float)hum_raw / 65535.0f);

    // Clamp humidity
    if(*humidity > 100.0f) *humidity = 100.0f;
    if(*humidity < 0.0f) *humidity = 0.0f;

    return HAL_OK;
}

// Read SGP40 VOC Raw Value
HAL_StatusTypeDef SGP40_ReadRaw(uint16_t *voc_raw) {
    uint8_t cmd[2] = {SGP40_MEASURE_RAW >> 8, SGP40_MEASURE_RAW & 0xFF};
    uint8_t data[3];

    // Send command
    if(HAL_I2C_Master_Transmit(&hi2c1, SGP40_ADDR, cmd, 2, 100) != HAL_OK) {
        return HAL_ERROR;
    }

    // Wait for measurement
    HAL_Delay(30);

    // Read 3 bytes
    if(HAL_I2C_Master_Receive(&hi2c1, SGP40_ADDR, data, 3, 100) != HAL_OK) {
        return HAL_ERROR;
    }

    // Check CRC
    uint8_t crc_received = data[2];
    uint8_t crc_calculated = CRC8(data, 2);

    if(crc_received != crc_calculated) {
        print_uart("SGP40 CRC Error! Got: 0x%02X, Expected: 0x%02X\r\n",
                   crc_received, crc_calculated);
        return HAL_ERROR;
    }

    *voc_raw = (data[0] << 8) | data[1];
    return HAL_OK;
}

// SGP40 Self-test
HAL_StatusTypeDef SGP40_SelfTest(void) {
    uint8_t cmd[2] = {SGP40_MEASURE_TEST >> 8, SGP40_MEASURE_TEST & 0xFF};
    uint8_t data[3];

    if(HAL_I2C_Master_Transmit(&hi2c1, SGP40_ADDR, cmd, 2, 100) != HAL_OK) {
        return HAL_ERROR;
    }

    HAL_Delay(250);

    if(HAL_I2C_Master_Receive(&hi2c1, SGP40_ADDR, data, 3, 100) != HAL_OK) {
        return HAL_ERROR;
    }

    uint16_t result = (data[0] << 8) | data[1];

    if(result == 0xD400) {
        return HAL_OK;
    }
    return HAL_ERROR;
}

// Initialize I2C with retry
void I2C_InitWithRetry(void) {
    uint8_t retry = 0;

    // Reset I2C peripheral
    __HAL_RCC_I2C1_FORCE_RESET();
    HAL_Delay(1);
    __HAL_RCC_I2C1_RELEASE_RESET();

    // Re-initialize I2C
    MX_I2C1_Init();

    // Test I2C communication
    while(retry < 5) {
        if(HAL_I2C_IsDeviceReady(&hi2c1, SHT41_ADDR, 3, 100) == HAL_OK) {
            print_uart("I2C Communication OK\r\n");
            break;
        }
        retry++;
        HAL_Delay(100);
    }

    if(retry == 5) {
        print_uart("I2C Communication Failed!\r\n");
    }
}
