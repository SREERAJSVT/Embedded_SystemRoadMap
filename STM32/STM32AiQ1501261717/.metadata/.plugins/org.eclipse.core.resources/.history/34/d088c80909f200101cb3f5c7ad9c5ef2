extern I2C_HandleTypeDef hi2c1;
extern UART_HandleTypeDef huart2;

#define SHT41_ADDR 0x44 << 1  // 0x88 in 8-bit format
#define SGP40_ADDR 0x59 << 1  // 0xB2 in 8-bit format

// SHT41 Commands
#define SHT41_MEAS_HIGH_PRECISION 0xFD
#define SHT41_SOFT_RESET 0x94

// SGP40 Commands
#define SGP40_MEASURE_RAW 0x260F
#define SGP40_MEASURE_TEST 0x280E
#define SGP40_HEATER_OFF 0x3615
#define SGP40_SOFT_RESET 0x0006
/* USER CODE END Includes */

