/* USER CODE BEGIN PFP */
// Function to send data via UART
void print_uart(const char* format, ...) {
    char buffer[128];
    va_list args;
    va_start(args, format);
    int len = vsnprintf(buffer, sizeof(buffer), format, args);
    va_end(args);
    HAL_UART_Transmit(&huart2, (uint8_t*)buffer, len, HAL_MAX_DELAY);
}

// Read SHT41 Temperature and Humidity
HAL_StatusTypeDef SHT41_Read(float *temperature, float *humidity) {
    uint8_t cmd[2] = {SHT41_MEAS_HIGH_PRECISION, 0x00};
    uint8_t data[6];

    // Send measurement command
    if(HAL_I2C_Master_Transmit(&hi2c1, SHT41_ADDR, cmd, 1, 100) != HAL_OK) {
        return HAL_ERROR;
    }

    // Wait for measurement (8.2ms for high precision)
    HAL_Delay(10);

    // Read 6 bytes of data
    if(HAL_I2C_Master_Receive(&hi2c1, SHT41_ADDR, data, 6, 100) != HAL_OK) {
        return HAL_ERROR;
    }

    // Convert temperature (first 2 bytes)
    uint16_t temp_raw = (data[0] << 8) | data[1];
    *temperature = -45 + 175 * ((float)temp_raw / 65535.0);

    // Convert humidity (4th and 5th bytes)
    uint16_t hum_raw = (data[3] << 8) | data[4];
    *humidity = -6 + 125 * ((float)hum_raw / 65535.0);

    // Clamp humidity to 0-100%
    if(*humidity > 100) *humidity = 100;
    if(*humidity < 0) *humidity = 0;

    return HAL_OK;
}

// Read SGP40 VOC Raw Value
HAL_StatusTypeDef SGP40_ReadRaw(uint16_t *voc_raw) {
    uint8_t cmd[2];
    uint8_t data[3];
    uint8_t crc;

    // Prepare command
    cmd[0] = SGP40_MEASURE_RAW >> 8;
    cmd[1] = SGP40_MEASURE_RAW & 0xFF;

    // Send command (no humidity/temperature compensation for simplicity)
    if(HAL_I2C_Master_Transmit(&hi2c1, SGP40_ADDR, cmd, 2, 100) != HAL_OK) {
        return HAL_ERROR;
    }

    // Wait for measurement (30ms)
    HAL_Delay(30);

    // Read 3 bytes (2 bytes data + 1 CRC)
    if(HAL_I2C_Master_Receive(&hi2c1, SGP40_ADDR, data, 3, 100) != HAL_OK) {
        return HAL_ERROR;
    }

    // Verify CRC (optional but recommended)
    // For simplicity, we'll skip CRC check in this example

    *voc_raw = (data[0] << 8) | data[1];

    return HAL_OK;
}

// SGP40 Self-test
HAL_StatusTypeDef SGP40_SelfTest(void) {
    uint8_t cmd[2] = {SGP40_MEASURE_TEST >> 8, SGP40_MEASURE_TEST & 0xFF};
    uint8_t data[3];

    HAL_I2C_Master_Transmit(&hi2c1, SGP40_ADDR, cmd, 2, 100);
    HAL_Delay(250); // Self-test takes 250ms

    if(HAL_I2C_Master_Receive(&hi2c1, SGP40_ADDR, data, 3, 100) != HAL_OK) {
        return HAL_ERROR;
    }

    uint16_t result = (data[0] << 8) | data[1];

    if(result == 0xD400) {
        print_uart("SGP40 Self-test PASSED\r\n");
        return HAL_OK;
    } else {
        print_uart("SGP40 Self-test FAILED: 0x%04X\r\n", result);
        return HAL_ERROR;
    }
}
