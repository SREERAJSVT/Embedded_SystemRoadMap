/* Private define ------------------------------------------------------------*/
/* USER CODE BEGIN PD */
#define SHT41_ADDR 0x44  // 7-bit address
#define SGP40_ADDR 0x59  // 7-bit address

// SHT41 Commands
#define SHT41_MEAS_HIGH_PRECISION 0xFD
#define SHT41_SOFT_RESET 0x94

// SGP40 Commands
#define SGP40_MEASURE_RAW 0x260F
#define SGP40_MEASURE_TEST 0x280E
#define SGP40_HEATER_OFF 0x3615
#define SGP40_SOFT_RESET 0x0006
/* USER CODE END PD */

/* Private macro -------------------------------------------------------------*/
/* USER CODE BEGIN PM */

/* USER CODE END PM */

/* Private variables ---------------------------------------------------------*/
I2C_HandleTypeDef hi2c1;
UART_HandleTypeDef huart2;

/* USER CODE BEGIN PV */
// Simple print function
void print_string(const char *str) {
    HAL_UART_Transmit(&huart2, (uint8_t*)str, strlen(str), 100);
}

// Simple print integer
void print_int(int value) {
    char buffer[12];
    sprintf(buffer, "%d", value);
    print_string(buffer);
}

// Simple print float (2 decimal places)
void print_float(float value) {
    int integer = (int)value;
    int decimal = (int)((value - integer) * 100);
    if(decimal < 0) decimal = -decimal;

    char buffer[20];
    sprintf(buffer, "%d.%02d", integer, decimal);
    print_string(buffer);
}

// CRC8 function for Sensirion sensors
uint8_t Sensirion_CRC8(uint8_t *data, uint8_t len) {
    uint8_t crc = 0xFF;

    for(uint8_t i = 0; i < len; i++) {
        crc ^= data[i];
        for(uint8_t bit = 0; bit < 8; bit++) {
            if(crc & 0x80) {
                crc = (crc << 1) ^ 0x31;
            } else {
                crc <<= 1;
            }
        }
    }
    return crc;
}

uint8_t sgp40_initialized = 0;
/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_USART2_UART_Init(void);
static void MX_I2C1_Init(void);
/* USER CODE BEGIN PFP */

// Read SHT41 Temperature and Humidity
HAL_StatusTypeDef SHT41_Read(float *temperature, float *humidity) {
    uint8_t cmd = SHT41_MEAS_HIGH_PRECISION;
    uint8_t data[6];

    // Send measurement command
    if(HAL_I2C_Master_Transmit(&hi2c1, SHT41_ADDR << 1, &cmd, 1, 100) != HAL_OK) {
        return HAL_ERROR;
    }

    // Wait for measurement
    HAL_Delay(10);

    // Read 6 bytes of data
    if(HAL_I2C_Master_Receive(&hi2c1, SHT41_ADDR << 1, data, 6, 100) != HAL_OK) {
        return HAL_ERROR;
    }

    // Convert temperature (first 2 bytes)
    uint16_t temp_raw = (data[0] << 8) | data[1];
    *temperature = -45.0f + (175.0f * temp_raw) / 65535.0f;

    // Convert humidity (bytes 3-4)
    uint16_t hum_raw = (data[3] << 8) | data[4];
    *humidity = -6.0f + (125.0f * hum_raw) / 65535.0f;

    // Clamp humidity
    if(*humidity < 0.0f) *humidity = 0.0f;
    if(*humidity > 100.0f) *humidity = 100.0f;

    return HAL_OK;
}

// SGP40 Soft Reset - FIXED VERSION
HAL_StatusTypeDef SGP40_SoftReset(void) {
    uint8_t cmd[2] = {0x00, 0x06};  // Soft reset command

    // Send soft reset command
    if(HAL_I2C_Master_Transmit(&hi2c1, SGP40_ADDR << 1, cmd, 2, 100) != HAL_OK) {
        return HAL_ERROR;
    }

    HAL_Delay(100);  // Wait 100ms after soft reset
    return HAL_OK;
}

// SGP40 Self Test
HAL_StatusTypeDef SGP40_SelfTest(void) {
    uint8_t cmd[2] = {0x28, 0x0E};  // Self test command
    uint8_t data[3];

    // Send self test command
    if(HAL_I2C_Master_Transmit(&hi2c1, SGP40_ADDR << 1, cmd, 2, 100) != HAL_OK) {
        return HAL_ERROR;
    }

    HAL_Delay(250);  // Self test takes 250ms

    // Read result
    if(HAL_I2C_Master_Receive(&hi2c1, SGP40_ADDR << 1, data, 3, 100) != HAL_OK) {
        return HAL_ERROR;
    }

    // Check CRC
    uint8_t crc = Sensirion_CRC8(data, 2);
    if(crc != data[2]) {
        print_string("SGP40 SelfTest CRC Error\r\n");
        return HAL_ERROR;
    }

    uint16_t result = (data[0] << 8) | data[1];

    if(result == 0xD400) {
        print_string("SGP40 SelfTest PASSED (0xD400)\r\n");
        return HAL_OK;
    } else {
        print_string("SGP40 SelfTest FAILED: 0x");
        char hex[5];
        sprintf(hex, "%04X", result);
        print_string(hex);
        print_string("\r\n");
        return HAL_ERROR;
    }
}

// SGP40 Heater Off
HAL_StatusTypeDef SGP40_HeaterOff(void) {
    uint8_t cmd[2] = {0x36, 0x15};  // Heater off command

    if(HAL_I2C_Master_Transmit(&hi2c1, SGP40_ADDR << 1, cmd, 2, 100) != HAL_OK) {
        return HAL_ERROR;
    }

    HAL_Delay(1);
    return HAL_OK;
}

// Initialize SGP40 - COMPLETE INITIALIZATION
HAL_StatusTypeDef SGP40_Init(void) {
    // Wait for sensor to power up (minimum 10ms)
    HAL_Delay(50);

    // Send soft reset
    if(SGP40_SoftReset() != HAL_OK) {
        print_string("SGP40 Soft Reset Failed\r\n");
        return HAL_ERROR;
    }

    // Wait for sensor to stabilize
    HAL_Delay(500);

    // Run self test
    if(SGP40_SelfTest() != HAL_OK) {
        print_string("SGP40 Self Test Failed - Continuing anyway\r\n");
        // Don't return error, some sensors might still work
    }

    // Turn heater off initially (optional)
    if(SGP40_HeaterOff() != HAL_OK) {
        print_string("SGP40 Heater Off Failed\r\n");
        // Continue anyway
    }

    sgp40_initialized = 1;
    return HAL_OK;
}

// Read SGP40 raw value - SIMPLIFIED VERSION
HAL_StatusTypeDef SGP40_ReadRaw(uint16_t *raw_value) {
    uint8_t cmd[2] = {0x26, 0x0F};  // Measure raw command
    uint8_t data[3];

    // Check if initialized
    if(!sgp40_initialized) {
        return HAL_ERROR;
    }

    // Send measure command
    if(HAL_I2C_Master_Transmit(&hi2c1, SGP40_ADDR << 1, cmd, 2, 100) != HAL_OK) {
        return HAL_ERROR;
    }

    HAL_Delay(30);  // Wait for measurement

    // Read result
    if(HAL_I2C_Master_Receive(&hi2c1, SGP40_ADDR << 1, data, 3, 100) != HAL_OK) {
        return HAL_ERROR;
    }

    // Skip CRC check for now to test
    *raw_value = (data[0] << 8) | data[1];

    // Check for valid range (typical SGP40 raw signal is 20000-60000)
    if(*raw_value == 0xFFFF || *raw_value == 0x0000 || *raw_value == 0xD400) {
        return HAL_ERROR;
    }

    return HAL_OK;
}

// Debug function: Try different SGP40 commands
void SGP40_Debug(void) {
    uint8_t cmd[2];
    uint8_t data[3];

    print_string("\r\nSGP40 Debug:\r\n");

    // Try soft reset
    print_string("1. Soft Reset... ");
    cmd[0] = 0x00; cmd[1] = 0x06;
    if(HAL_I2C_Master_Transmit(&hi2c1, SGP40_ADDR << 1, cmd, 2, 100) == HAL_OK) {
        print_string("OK\r\n");
    } else {
        print_string("FAILED\r\n");
    }
    HAL_Delay(100);

    // Try get serial number
    print_string("2. Get Serial... ");
    cmd[0] = 0x36; cmd[1] = 0x82;
    if(HAL_I2C_Master_Transmit(&hi2c1, SGP40_ADDR << 1, cmd, 2, 100) == HAL_OK) {
        HAL_Delay(10);
        if(HAL_I2C_Master_Receive(&hi2c1, SGP40_ADDR << 1, data, 9, 100) == HAL_OK) {
            print_string("OK - Data: ");
            for(int i=0; i<9; i++) {
                char hex[4];
                sprintf(hex, "%02X ", data[i]);
                print_string(hex);
            }
            print_string("\r\n");
        } else {
            print_string("RX FAILED\r\n");
        }
    } else {
        print_string("TX FAILED\r\n");
    }

    // Try measure raw without CRC
    print_string("3. Measure Raw... ");
    cmd[0] = 0x26; cmd[1] = 0x0F;
    if(HAL_I2C_Master_Transmit(&hi2c1, SGP40_ADDR << 1, cmd, 2, 100) == HAL_OK) {
        HAL_Delay(30);
        if(HAL_I2C_Master_Receive(&hi2c1, SGP40_ADDR << 1, data, 3, 100) == HAL_OK) {
            uint16_t raw = (data[0] << 8) | data[1];
            print_string("OK - Raw: ");
            print_int(raw);
            print_string(", CRC: ");
            char hex[4];
            sprintf(hex, "%02X", data[2]);
            print_string(hex);
            print_string("\r\n");
        } else {
            print_string("RX FAILED\r\n");
        }
    } else {
        print_string("TX FAILED\r\n");
    }
}

// I2C Scanner
void I2C_Scan(void) {
    uint8_t i, found = 0;

    print_string("I2C Scan: ");

    for(i = 1; i < 128; i++) {
        if(HAL_I2C_IsDeviceReady(&hi2c1, i << 1, 1, 10) == HAL_OK) {
            if(found > 0) print_string(", ");
            print_string("0x");
            char hex[3];
            sprintf(hex, "%02X", i);
            print_string(hex);
            found++;
        }
    }

    if(found == 0) {
        print_string("No devices found");
    }
    print_string("\r\n");
}

/* USER CODE END PFP */

/* Private user code ---------------------------------------------------------*/
/* USER CODE BEGIN 0 */

/* USER CODE END 0 */

/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{
  /* USER CODE BEGIN 1 */

  /* USER CODE END 1 */

  /* MCU Configuration--------------------------------------------------------*/

  /* Reset of all peripherals, Initializes the Flash interface and the Systick. */
  HAL_Init();

  /* USER CODE BEGIN Init */

  /* USER CODE END Init */

  /* Configure the system clock */
  SystemClock_Config();

  /* USER CODE BEGIN SysInit */

  /* USER CODE END SysInit */

  /* Initialize all configured peripherals */
  MX_GPIO_Init();
  MX_USART2_UART_Init();
  MX_I2C1_Init();
  /* USER CODE BEGIN 2 */

  float temperature = 0, humidity = 0;
  uint16_t voc_raw = 0;

  // Initialize LED
  HAL_GPIO_WritePin(LD2_GPIO_Port, LD2_Pin, GPIO_PIN_SET);
  HAL_Delay(200);
  HAL_GPIO_WritePin(LD2_GPIO_Port, LD2_Pin, GPIO_PIN_RESET);

  print_string("\r\n\r\n================================\r\n");
  print_string("SHT41 & SGP40 Sensor Reader\r\n");
  print_string("STM32 I2C + UART VCP\r\n");
  print_string("================================\r\n\r\n");

  // I2C Scan
  I2C_Scan();

  // Wait for sensors to stabilize
  print_string("Initializing sensors...\r\n");
  HAL_Delay(2000);  // Wait 2 seconds for sensors to power up

  // Debug SGP40
  SGP40_Debug();

  // Try to initialize SGP40
  print_string("\r\nInitializing SGP40...\r\n");
  if(SGP40_Init() == HAL_OK) {
      print_string("SGP40 Initialized Successfully\r\n");
  } else {
      print_string("SGP40 Init Failed - Trying direct read\r\n");
  }

  print_string("\r\nStarting readings:\r\n");
  print_string("==================\r\n");

  uint32_t error_count = 0;
  uint32_t success_count = 0;

  /* USER CODE END 2 */

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
  while (1)
  {
      // Toggle LED
      HAL_GPIO_TogglePin(LD2_GPIO_Port, LD2_Pin);

      // Read SHT41
      if(SHT41_Read(&temperature, &humidity) == HAL_OK) {
          print_string("SHT41: T=");
          print_float(temperature);
          print_string("C, H=");
          print_float(humidity);
          print_string("%\r\n");
      } else {
          print_string("SHT41 Error\r\n");
      }

      // Read SGP40
      if(SGP40_ReadRaw(&voc_raw) == HAL_OK) {
          success_count++;
          print_string("SGP40: Raw=");
          print_int(voc_raw);

          // Calculate approximate TVOC (ppb) - typical conversion
          if(voc_raw > 10000 && voc_raw < 60000) {
              float tvoc_ppb = (voc_raw - 20000) / 20.0f;
              if(tvoc_ppb < 0) tvoc_ppb = 0;
              print_string(" (");
              print_float(tvoc_ppb);
              print_string(" ppb)");
          }

          print_string(" [OK:");
          print_int(success_count);
          print_string("]\r\n");
          error_count = 0;
      } else {
          error_count++;
          print_string("SGP40 Error [Err:");
          print_int(error_count);
          print_string("]\r\n");

          // Reset SGP40 if too many errors
          if(error_count > 5) {
              print_string("Resetting SGP40...\r\n");
              SGP40_SoftReset();
              HAL_Delay(500);
              error_count = 0;
          }
      }

      print_string("-----\r\n\r\n");

      HAL_Delay(2000);
    /* USER CODE END WHILE */

    /* USER CODE BEGIN 3 */
  }
  /* USER CODE END 3 */
}

/**
  * @brief System Clock Configuration
  * @retval None
  */
void SystemClock_Config(void)
{
  RCC_OscInitTypeDef RCC_OscInitStruct = {0};
  RCC_ClkInitTypeDef RCC_ClkInitStruct = {0};

  /** Configure the main internal regulator output voltage
  */
  __HAL_RCC_PWR_CLK_ENABLE();
  __HAL_PWR_VOLTAGESCALING_CONFIG(PWR_REGULATOR_VOLTAGE_SCALE3);

  /** Initializes the RCC Oscillators according to the specified parameters
  * in the RCC_OscInitTypeDef structure.
  */
  RCC_OscInitStruct.OscillatorType = RCC_OSCILLATORTYPE_HSI;
  RCC_OscInitStruct.HSIState = RCC_HSI_ON;
  RCC_OscInitStruct.HSICalibrationValue = RCC_HSICALIBRATION_DEFAULT;
  RCC_OscInitStruct.PLL.PLLState = RCC_PLL_ON;
  RCC_OscInitStruct.PLL.PLLSource = RCC_PLLSOURCE_HSI;
  RCC_OscInitStruct.PLL.PLLM = 16;
  RCC_OscInitStruct.PLL.PLLN = 336;
  RCC_OscInitStruct.PLL.PLLP = RCC_PLLP_DIV4;
  RCC_OscInitStruct.PLL.PLLQ = 2;
  RCC_OscInitStruct.PLL.PLLR = 2;
  if (HAL_RCC_OscConfig(&RCC_OscInitStruct) != HAL_OK)
  {
    Error_Handler();
  }

  /** Initializes the CPU, AHB and APB buses clocks
  */
  RCC_ClkInitStruct.ClockType = RCC_CLOCKTYPE_HCLK|RCC_CLOCKTYPE_SYSCLK
                              |RCC_CLOCKTYPE_PCLK1|RCC_CLOCKTYPE_PCLK2;
  RCC_ClkInitStruct.SYSCLKSource = RCC_SYSCLKSOURCE_PLLCLK;
  RCC_ClkInitStruct.AHBCLKDivider = RCC_SYSCLK_DIV1;
  RCC_ClkInitStruct.APB1CLKDivider = RCC_HCLK_DIV2;
  RCC_ClkInitStruct.APB2CLKDivider = RCC_HCLK_DIV1;

  if (HAL_RCC_ClockConfig(&RCC_ClkInitStruct, FLASH_LATENCY_2) != HAL_OK)
  {
    Error_Handler();
  }
}

/**
  * @brief I2C1 Initialization Function
  * @param None
  * @retval None
  */
static void MX_I2C1_Init(void)
{
  /* USER CODE BEGIN I2C1_Init 0 */

  /* USER CODE END I2C1_Init 0 */

  /* USER CODE BEGIN I2C1_Init 1 */

  /* USER CODE END I2C1_Init 1 */
  hi2c1.Instance = I2C1;
  hi2c1.Init.ClockSpeed = 100000;  // Try 50kHz if still having issues
  hi2c1.Init.DutyCycle = I2C_DUTYCYCLE_2;
  hi2c1.Init.OwnAddress1 = 0;
  hi2c1.Init.AddressingMode = I2C_ADDRESSINGMODE_7BIT;
  hi2c1.Init.DualAddressMode = I2C_DUALADDRESS_DISABLE;
  hi2c1.Init.OwnAddress2 = 0;
  hi2c1.Init.GeneralCallMode = I2C_GENERALCALL_DISABLE;
  hi2c1.Init.NoStretchMode = I2C_NOSTRETCH_DISABLE;
  if (HAL_I2C_Init(&hi2c1) != HAL_OK)
  {
    Error_Handler();
  }

  // Configure I2C analog filter (disable for faster response)
  hi2c1.Instance->CR1 |= I2C_CR1_ANFOFF;

  /* USER CODE BEGIN I2C1_Init 2 */

  /* USER CODE END I2C1_Init 2 */
}

