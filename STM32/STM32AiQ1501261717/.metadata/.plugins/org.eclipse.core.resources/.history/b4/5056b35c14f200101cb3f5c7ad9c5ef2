/* Private define ------------------------------------------------------------*/
/* USER CODE BEGIN PD */
#define SHT41_ADDR 0x44  // 7-bit address
#define SGP40_ADDR 0x59  // 7-bit address

// SHT41 Commands
#define SHT41_MEAS_HIGH_PRECISION 0xFD
#define SHT41_SOFT_RESET 0x94
/* USER CODE END PD */

/* Private macro -------------------------------------------------------------*/
/* USER CODE BEGIN PM */

/* USER CODE END PM */

/* Private variables ---------------------------------------------------------*/
I2C_HandleTypeDef hi2c1;
UART_HandleTypeDef huart2;

/* USER CODE BEGIN PV */
// Simple print function
void print_string(const char *str) {
    HAL_UART_Transmit(&huart2, (uint8_t*)str, strlen(str), HAL_MAX_DELAY);
}

// Simple print integer
void print_int(int value) {
    char buffer[12];
    sprintf(buffer, "%d", value);
    print_string(buffer);
}

// Simple print float (2 decimal places)
void print_float(float value) {
    int integer = (int)value;
    int decimal = (int)((value - integer) * 100);
    if(decimal < 0) decimal = -decimal;

    char buffer[20];
    sprintf(buffer, "%d.%02d", integer, decimal);
    print_string(buffer);
}

// Print hex value
void print_hex(uint32_t value, int digits) {
    char buffer[10];
    sprintf(buffer, "%0*lX", digits, value);
    print_string(buffer);
}

uint8_t sgp40_initialized = 0;
/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_USART2_UART_Init(void);
static void MX_I2C1_Init(void);
/* USER CODE BEGIN PFP */

// Read SHT41 Temperature and Humidity
HAL_StatusTypeDef SHT41_Read(float *temperature, float *humidity) {
    uint8_t cmd = SHT41_MEAS_HIGH_PRECISION;
    uint8_t data[6];

    // Send measurement command
    if(HAL_I2C_Master_Transmit(&hi2c1, SHT41_ADDR << 1, &cmd, 1, 100) != HAL_OK) {
        return HAL_ERROR;
    }

    // Wait for measurement
    HAL_Delay(10);

    // Read 6 bytes of data
    if(HAL_I2C_Master_Receive(&hi2c1, SHT41_ADDR << 1, data, 6, 100) != HAL_OK) {
        return HAL_ERROR;
    }

    // Convert temperature (first 2 bytes)
    uint16_t temp_raw = (data[0] << 8) | data[1];
    *temperature = -45.0f + (175.0f * temp_raw) / 65535.0f;

    // Convert humidity (bytes 3-4)
    uint16_t hum_raw = (data[3] << 8) | data[4];
    *humidity = -6.0f + (125.0f * hum_raw) / 65535.0f;

    // Clamp humidity
    if(*humidity < 0.0f) *humidity = 0.0f;
    if(*humidity > 100.0f) *humidity = 100.0f;

    return HAL_OK;
}

// FIXED SGP40 ReadRaw with bus recovery
HAL_StatusTypeDef SGP40_ReadRaw(uint16_t *raw_value) {
    uint8_t cmd[2] = {0x26, 0x0F};  // Measure raw command
    uint8_t data[3];
    HAL_StatusTypeDef status;

    // Send command with bus clearing
    // Clear any pending bus issues
    __HAL_I2C_CLEAR_FLAG(&hi2c1, I2C_FLAG_AF);  // Clear ACK failure
    __HAL_I2C_CLEAR_FLAG(&hi2c1, I2C_FLAG_BERR);  // Clear bus error

    // Generate STOP condition to clear bus
    hi2c1.Instance->CR1 |= I2C_CR1_STOP;
    while(hi2c1.Instance->SR2 & I2C_SR2_BUSY);  // Wait for bus free

    // Send measure command
    status = HAL_I2C_Master_Transmit(&hi2c1, SGP40_ADDR << 1, cmd, 2, 100);
    if(status != HAL_OK) {
        // Try one more time with reset
        hi2c1.Instance->CR1 |= I2C_CR1_STOP;
        while(hi2c1.Instance->SR2 & I2C_SR2_BUSY);
        HAL_Delay(1);

        status = HAL_I2C_Master_Transmit(&hi2c1, SGP40_ADDR << 1, cmd, 2, 100);
        if(status != HAL_OK) {
            return status;
        }
    }

    // Wait for measurement (SGP40 needs 30ms for raw reading)
    HAL_Delay(50);

    // Read result with bus clearing before read
    hi2c1.Instance->CR1 |= I2C_CR1_STOP;
    while(hi2c1.Instance->SR2 & I2C_SR2_BUSY);
    HAL_Delay(1);

    status = HAL_I2C_Master_Receive(&hi2c1, SGP40_ADDR << 1, data, 3, 100);
    if(status != HAL_OK) {
        return status;
    }

    *raw_value = (data[0] << 8) | data[1];

    // Validate response (SGP40 typical range: 20000-60000)
    if(*raw_value < 10000 || *raw_value > 60000) {
        // Try one more time with fresh reading
        hi2c1.Instance->CR1 |= I2C_CR1_STOP;
        while(hi2c1.Instance->SR2 & I2C_SR2_BUSY);
        HAL_Delay(100);
        return HAL_ERROR;
    }

    return HAL_OK;
}

// Simple SGP40 test - minimal approach
void SGP40_MinimalTest(void) {
    uint8_t cmd[2];
    uint8_t data[3];
    HAL_StatusTypeDef status;

    print_string("\r\n=== SGP40 MINIMAL TEST ===\r\n");

    // 1. Clear bus
    hi2c1.Instance->CR1 |= I2C_CR1_STOP;
    while(hi2c1.Instance->SR2 & I2C_SR2_BUSY);
    HAL_Delay(10);

    // 2. Test Get Features (should work)
    print_string("1. Get Features... ");
    cmd[0] = 0x20;
    cmd[1] = 0x2F;

    hi2c1.Instance->CR1 |= I2C_CR1_STOP;
    while(hi2c1.Instance->SR2 & I2C_SR2_BUSY);

    status = HAL_I2C_Master_Transmit(&hi2c1, SGP40_ADDR << 1, cmd, 2, 100);
    if(status == HAL_OK) {
        HAL_Delay(10);

        hi2c1.Instance->CR1 |= I2C_CR1_STOP;
        while(hi2c1.Instance->SR2 & I2C_SR2_BUSY);

        status = HAL_I2C_Master_Receive(&hi2c1, SGP40_ADDR << 1, data, 3, 100);
        if(status == HAL_OK) {
            uint16_t features = (data[0] << 8) | data[1];
            print_string("OK: 0x");
            print_hex(features, 4);
            print_string(" (Expected: 0x3240)\r\n");

            if(features == 0x3240) {
                print_string("   -> Genuine SGP40 detected!\r\n");
            }
        } else {
            print_string("RX Failed\r\n");
        }
    } else {
        print_string("TX Failed\r\n");
    }

    // 3. Wait for sensor to be ready
    HAL_Delay(1000);
    print_string("2. Waiting for sensor readiness...\r\n");

    // 4. Try Measure Raw with different approaches
    for(int attempt = 1; attempt <= 3; attempt++) {
        print_string("3. Measure Raw (Attempt ");
        print_int(attempt);
        print_string(")... ");

        uint16_t raw_value;
        if(SGP40_ReadRaw(&raw_value) == HAL_OK) {
            print_string("SUCCESS: Raw=");
            print_int(raw_value);

            // Calculate TVOC
            if(raw_value > 20000) {
                float tvoc_ppb = (raw_value - 20000) / 20.0f;
                print_string(" (");
                print_float(tvoc_ppb);
                print_string(" ppb)");
            }

            print_string("\r\n");
            sgp40_initialized = 1;
            return;  // Success!
        } else {
            print_string("FAILED\r\n");
            HAL_Delay(500);  // Wait before retry
        }
    }

    print_string("=== TEST COMPLETE (SGP40 Not Working) ===\r\n");
}

// I2C Scanner
void I2C_Scan(void) {
    uint8_t i, found = 0;

    print_string("I2C Scan: ");

    for(i = 1; i < 128; i++) {
        if(HAL_I2C_IsDeviceReady(&hi2c1, i << 1, 1, 10) == HAL_OK) {
            if(found > 0) print_string(", ");
            print_string("0x");
            print_hex(i, 2);
            found++;
        }
    }

    if(found == 0) {
        print_string("No devices found");
    }
    print_string("\r\n");
}

