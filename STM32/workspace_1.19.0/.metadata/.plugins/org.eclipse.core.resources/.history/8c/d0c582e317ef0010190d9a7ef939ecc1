/* USER CODE BEGIN Header */
/**
  ******************************************************************************
  * @file           : main.c
  * @brief          : Refined I2C Scanner & Sensor Display
  ******************************************************************************
  */
/* USER CODE END Header */

/* Includes ------------------------------------------------------------------*/
#include "main.h"
#include <stdio.h>
#include <stdint.h>
#include <stdlib.h>
#include <string.h>

/* OLED */
#include "ssd1306.h"
#include "ssd1306_fonts.h"

/* Private defines -----------------------------------------------------------*/
#define BMP280_ADDR (0x76 << 1)
#define BMP280_CHIP_ID_REG 0xD0
#define BMP280_CONTROL_REG 0xF4
#define BMP280_DATA_START  0xF7

/* Private variables ---------------------------------------------------------*/
I2C_HandleTypeDef hi2c1;
SPI_HandleTypeDef hspi2;
UART_HandleTypeDef huart2;

uint8_t buf[128];
uint8_t sensors_found = 0;

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_USART2_UART_Init(void);
static void MX_I2C1_Init(void);
static void MX_SPI2_Init(void);
void UART_Print(char* message);
uint8_t I2C_Scan(void);

/* USER CODE BEGIN 0 */
void UART_Print(char* message) {
    HAL_UART_Transmit(&huart2, (uint8_t*)message, strlen(message), 100);
}

/**
 * @brief Scans I2C bus and returns number of devices found
 */
uint8_t I2C_Scan(void) {
    char scan_msg[64];
    HAL_StatusTypeDef result;
    uint8_t count = 0;

    UART_Print("\r\n--- Starting I2C Scan ---\r\n");
    for (uint16_t i = 1; i < 128; i++) {
        result = HAL_I2C_IsDeviceReady(&hi2c1, (uint16_t)(i << 1), 2, 10);
        if (result == HAL_OK) {
            sprintf(scan_msg, "Device found at: 0x%02X\r\n", i);
            UART_Print(scan_msg);
            count++;
        }
    }
    if(count == 0) UART_Print("No I2C devices detected!\r\n");
    return count;
}
/* USER CODE END 0 */

int main(void)
{
  /* MCU Configuration */
  HAL_Init();
  SystemClock_Config();

  /* Initialize all configured peripherals */
  MX_GPIO_Init();
  MX_USART2_UART_Init();
  MX_I2C1_Init();
  MX_SPI2_Init();

  /* USER CODE BEGIN 2 */
  UART_Print("System Booting...\r\n");

  // 1. Initialize OLED
  ssd1306_Init();
  ssd1306_Fill(Black);
  ssd1306_SetCursor(2, 0);
  ssd1306_WriteString("I2C Scanner", Font_7x10, White);
  ssd1306_UpdateScreen();
  HAL_Delay(500);

  // 2. Perform Scan
  sensors_found = I2C_Scan();

  // 3. BMP280 Init Logic (if address is responsive)
  uint8_t chip_id = 0;
  if (HAL_I2C_Mem_Read(&hi2c1, BMP280_ADDR, BMP280_CHIP_ID_REG, 1, &chip_id, 1, 100) == HAL_OK) {
      if (chip_id == 0x58) {
          UART_Print("BMP280 Detected & Initializing...\r\n");
          uint8_t config = 0x27; // Normal Mode, Temp/Pres x1
          HAL_I2C_Mem_Write(&hi2c1, BMP280_ADDR, BMP280_CONTROL_REG, 1, &config, 1, 100);
      }
  }
  /* USER CODE END 2 */

  /* Infinite loop */
  while (1)
  {
    // Heartbeat: Toggle PB5 LED
    HAL_GPIO_TogglePin(GPIOB, GPIO_PIN_5);

    ssd1306_Fill(Black);
    ssd1306_SetCursor(2, 0);

    if (sensors_found == 0) {
        // Warning if no devices are found
        ssd1306_WriteString("CRITICAL ERROR:", Font_7x10, White);
        ssd1306_SetCursor(2, 15);
        ssd1306_WriteString("NO I2C SENSORS", Font_7x10, White);
        ssd1306_SetCursor(2, 30);
        ssd1306_WriteString("CHECK WIRING!", Font_7x10, White);
        UART_Print("Loop: No I2C devices found.\r\n");
    }
    else {
        // Try reading BMP280
        uint8_t raw_data[6];
        if(HAL_I2C_Mem_Read(&hi2c1, BMP280_ADDR, BMP280_DATA_START, 1, raw_data, 6, 100) == HAL_OK) {
            int32_t adc_P = (raw_data[0] << 12) | (raw_data[1] << 4) | (raw_data[2] >> 4);
            int32_t adc_T = (raw_data[3] << 12) | (raw_data[4] << 4) | (raw_data[5] >> 4);

            sprintf((char*)buf, "Raw T: %ld", adc_T);
            ssd1306_WriteString( (char*)buf, Font_7x10, White);
            ssd1306_SetCursor(2, 15);
            sprintf((char*)buf, "Raw P: %ld", adc_P);
            ssd1306_WriteString( (char*)buf, Font_7x10, White);
        } else {
            ssd1306_WriteString("BMP280 Missing", Font_7x10, White);
        }
    }

    ssd1306_UpdateScreen();
    HAL_Delay(500);
  }
}

/* --- Peripheral Inits (CubeMX Style) --- */

static void MX_GPIO_Init(void) {
  GPIO_InitTypeDef GPIO_InitStruct = {0};
  __HAL_RCC_GPIOB_CLK_ENABLE();
  __HAL_RCC_GPIOA_CLK_ENABLE();

  // Initialize PB5 as Output for LED
  HAL_GPIO_WritePin(GPIOB, GPIO_PIN_5, GPIO_PIN_RESET);
  GPIO_InitStruct.Pin = GPIO_PIN_5;
  GPIO_InitStruct.Mode = GPIO_MODE_OUTPUT_PP;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_LOW;
  HAL_GPIO_Init(GPIOB, &GPIO_InitStruct);
}

static void MX_I2C1_Init(void) {
  hi2c1.Instance = I2C1;
  hi2c1.Init.ClockSpeed = 100000;
  hi2c1.Init.DutyCycle = I2C_DUTYCYCLE_2;
  hi2c1.Init.OwnAddress1 = 0;
  hi2c1.Init.AddressingMode = I2C_ADDRESSINGMODE_7BIT;
  hi2c1.Init.DualAddressMode = I2C_DUALADDRESS_DISABLE;
  hi2c1.Init.GeneralCallMode = I2C_GENERALCALL_DISABLE;
  hi2c1.Init.NoStretchMode = I2C_NOSTRETCH_DISABLE;
  HAL_I2C_Init(&hi2c1);
}

static void MX_USART2_UART_Init(void) {
  huart2.Instance = USART2;
  huart2.Init.BaudRate = 115200;
  huart2.Init.WordLength = UART_WORDLENGTH_8B;
  huart2.Init.StopBits = UART_STOPBITS_1;
  huart2.Init.Parity = UART_PARITY_NONE;
  huart2.Init.Mode = UART_MODE_TX_RX;
  huart2.Init.HwFlowCtl = UART_HWCONTROL_NONE;
  huart2.Init.OverSampling = UART_OVERSAMPLING_16;
  HAL_UART_Init(&huart2);
}

// ... SystemClock_Config and MX_SPI2_Init remain as you had them ...
