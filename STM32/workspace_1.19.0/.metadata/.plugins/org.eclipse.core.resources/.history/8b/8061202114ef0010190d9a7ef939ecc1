/* Private user code ---------------------------------------------------------*/
/* USER CODE BEGIN 0 */

uint8_t chip_id;
HAL_I2C_Mem_Read(&hi2c1, BMP280_ADDR, BMP280_CHIP_ID_REG, 1, &chip_id, 1, 100);

if (chip_id == 0x58) { // 0x58 is the ID for BMP280
    UART_Print("BMP280 Detected!\r\n");

    // 1. Read Calibration Data (all 24 bytes starting from 0x88)
    uint8_t calib_data[24];
    HAL_I2C_Mem_Read(&hi2c1, BMP280_ADDR, 0x88, 1, calib_data, 24, 100);
    // (You would map calib_data to the bmp280_calib struct here)

    // 2. Configure Sensor: Normal Mode, Temp x1, Pressure x1
    uint8_t config = 0x27; // 001 001 11 -> Temp x1, Pres x1, Normal Mode
    HAL_I2C_Mem_Write(&hi2c1, BMP280_ADDR, BMP280_CONTROL_REG, 1, &config, 1, 100);
} else {
    UART_Print("BMP280 Not Found. Check wiring!\r\n");
}
/* USER CODE END 2 */
/* USER CODE BEGIN PV */
uint8_t buf[64];
/* USER CODE END PV */
void UART_Print(char* message) {
    HAL_UART_Transmit(&huart2, (uint8_t*)message, strlen(message), 100);
}
void I2C_Scan(void) {
    char msg[128];
    HAL_StatusTypeDef result;
    uint8_t found_any = 0;
    const uint8_t total_attempts = 4;

    UART_Print("\r\n--- Starting Multi-Attempt I2C Scan ---\r\n");

    for (uint8_t attempt = 1; attempt <= total_attempts; attempt++) {
        sprintf(msg, "Attempt %d of %d...\r\n", attempt, total_attempts);
        UART_Print(msg);

        found_any = 0; // Reset for this specific pass

        for (uint16_t i = 1; i < 128; i++) {
            // Shift address for HAL (7-bit to 8-bit)
            result = HAL_I2C_IsDeviceReady(&hi2c1, (uint16_t)(i << 1), 3, 10);

            if (result == HAL_OK) {
                sprintf(msg, "  [SUCCESS] Found device at 0x%02X\r\n", i);
                UART_Print(msg);
                found_any = 1;
            }
        }

        if (found_any) {
            UART_Print("Scan successful. Device(s) detected.\r\n");
            break; // Exit the attempt loop if we found something
        } else {
            UART_Print("  No devices found on this pass.\r\n");
            HAL_Delay(500); // Wait 500ms before trying again
        }
    }

    if (!found_any) {
        UART_Print("\r\n[CRITICAL ERROR] After 4 attempts, no I2C devices were detected.\r\n");
        UART_Print("Please check: \r\n 1. Are SCL/SDA swapped?\r\n 2. Are you using PB6/PB7?\r\n 3. Is the OLED getting 3.3V?\r\n");
    }
    UART_Print("--- Scan Process Complete ---\r\n");
}
/* USER CODE END 0 */

/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{

  /* USER CODE BEGIN 1 */

  /* USER CODE END 1 */

  /* MCU Configuration--------------------------------------------------------*/

  /* Reset of all peripherals, Initializes the Flash interface and the Systick. */
  HAL_Init();

  /* USER CODE BEGIN Init */
  // 1. Initialize the OLED display
    // ssd1306_Init();
     HAL_Delay(100); // Short delay to stabilize

  /* USER CODE END Init */

  /* Configure the system clock */
  SystemClock_Config();

  /* USER CODE BEGIN SysInit */

  /* USER CODE END SysInit */

  /* Initialize all configured peripherals */
  MX_GPIO_Init();
  MX_USART2_UART_Init();
  MX_I2C1_Init();
  MX_SPI2_Init();
  /* USER CODE BEGIN 2 */
  ssd1306_Init();
  	HAL_Delay(100);
  	I2C_Scan();
  /* USER CODE END 2 */
  	/* USER CODE BEGIN WHILE */
  	while (1) {
  	    uint8_t raw_data[6];
  	    HAL_I2C_Mem_Read(&hi2c1, BMP280_ADDR, BMP280_DATA_START, 1, raw_data, 6, 100);

  	    // Convert raw bytes to 20-bit integers
  	    int32_t adc_P = (raw_data[0] << 12) | (raw_data[1] << 4) | (raw_data[2] >> 4);
  	    int32_t adc_T = (raw_data[3] << 12) | (raw_data[4] << 4) | (raw_data[5] >> 4);

  	    // Note: You MUST apply Bosch's compensation formulas here to get
  	    // actual Celsius and Pascals.

  	    HAL_Delay(1000);
  	}
  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
  while (1)
  {
    /* USER CODE END WHILE */

    // Example: Display some text in the loop
	  uint8_t y = 0;

	      ssd1306_Fill(Black);

	      strcpy((char*)buf, "hello!\r\n");
	      HAL_UART_Transmit(&huart2, buf, strlen((char*)buf), HAL_MAX_DELAY);
	      I2C_Scan();
	  #ifdef SSD1306_INCLUDE_FONT_16x26
	      ssd1306_SetCursor(2, y);
	      ssd1306_WriteString("Font 16x26", Font_16x26, White);
	  #endif

	      ssd1306_UpdateScreen();
	      HAL_Delay(1000);

    /* USER CODE BEGIN 3 */
  }
  /* USER CODE END 3 */
}

/**
  * @brief System Clock Configuration
  * @retval None
  */
void SystemClock_Config(void)
{
  RCC_OscInitTypeDef RCC_OscInitStruct = {0};
  RCC_ClkInitTypeDef RCC_ClkInitStruct = {0};

  /** Configure the main internal regulator output voltage
  */
  __HAL_RCC_PWR_CLK_ENABLE();
  __HAL_PWR_VOLTAGESCALING_CONFIG(PWR_REGULATOR_VOLTAGE_SCALE3);

  /** Initializes the RCC Oscillators according to the specified parameters
  * in the RCC_OscInitTypeDef structure.
  */
  RCC_OscInitStruct.OscillatorType = RCC_OSCILLATORTYPE_HSI;
  RCC_OscInitStruct.HSIState = RCC_HSI_ON;
  RCC_OscInitStruct.HSICalibrationValue = RCC_HSICALIBRATION_DEFAULT;
  RCC_OscInitStruct.PLL.PLLState = RCC_PLL_ON;
  RCC_OscInitStruct.PLL.PLLSource = RCC_PLLSOURCE_HSI;
  RCC_OscInitStruct.PLL.PLLM = 16;
  RCC_OscInitStruct.PLL.PLLN = 336;
  RCC_OscInitStruct.PLL.PLLP = RCC_PLLP_DIV4;
  RCC_OscInitStruct.PLL.PLLQ = 2;
  RCC_OscInitStruct.PLL.PLLR = 2;
  if (HAL_RCC_OscConfig(&RCC_OscInitStruct) != HAL_OK)
  {
    Error_Handler();
  }

  /** Initializes the CPU, AHB and APB buses clocks
  */
  RCC_ClkInitStruct.ClockType = RCC_CLOCKTYPE_HCLK|RCC_CLOCKTYPE_SYSCLK
                              |RCC_CLOCKTYPE_PCLK1|RCC_CLOCKTYPE_PCLK2;
  RCC_ClkInitStruct.SYSCLKSource = RCC_SYSCLKSOURCE_PLLCLK;
  RCC_ClkInitStruct.AHBCLKDivider = RCC_SYSCLK_DIV1;
  RCC_ClkInitStruct.APB1CLKDivider = RCC_HCLK_DIV2;
  RCC_ClkInitStruct.APB2CLKDivider = RCC_HCLK_DIV1;

  if (HAL_RCC_ClockConfig(&RCC_ClkInitStruct, FLASH_LATENCY_2) != HAL_OK)
  {
    Error_Handler();
  }
}

