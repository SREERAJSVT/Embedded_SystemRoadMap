/* Global Variables - Resolves 'voc_params' undeclared */
VocAlgorithmParams voc_params;

int main(void) {
	System_Init();
	    VocAlgorithm_init(&voc_params);
	    OLED_Init();

	    UART2_SendString("--- AIQ System Booting ---\r\n");

	    char debug_buf[100];
	    float t, rh;

	    while(1) {
	        SHT40_Read(&t, &rh);

	        // Print values to Serial Monitor
	        sprintf(debug_buf, "Temp: %.2f C, Humidity: %.2f %%\r\n", t, rh);
	        UART2_SendString(debug_buf);
}
void UART2_SendChar(char c) {
    while (!(USART2->SR & (1 << 7))); // Wait for TXE (Transmit buffer empty)
    USART2->DR = c;
}

void UART2_SendString(char *str) {
    while (*str) UART2_SendChar(*str++);
}
