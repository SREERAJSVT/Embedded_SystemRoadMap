#ifndef SSD1306_H_
#define SSD1306_H_

#include "stm32_f446xx.h"

// SSD1306 I2C Address (Usually 0x3C, shifted left for 7-bit addressing)
#define SSD1306_ADDR    (0x3C << 1)

// Function Prototypes
void I2C1_Init(void);
void SSD1306_Init(void);
void SSD1306_WriteCmd(uint8_t cmd);
void SSD1306_WriteData(uint8_t data);
void SSD1306_Clear(void);

#endif
