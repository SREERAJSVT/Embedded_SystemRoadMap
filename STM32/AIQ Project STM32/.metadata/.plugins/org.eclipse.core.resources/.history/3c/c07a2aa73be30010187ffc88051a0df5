#ifndef SGP40SHT4X_H_
#define SGP40SHT4X_H_



#include "stm32f4xx.h"

// I2C Addresses
#define SHT4X_ADDR  (0x44 << 1)
#define SGP40_ADDR  (0x59 << 1)
#define OLED_ADDR   (0x3C << 1)

// SHT4x Commands
#define SHT4X_MEASURE_HIGH_PREC 0xFD

// SGP40 Commands
#define SGP40_MEASURE_RAW       0x260F

typedef struct {
    float temperature;
    float humidity;
    uint16_t voc_raw;
} SensorData;

// Function Prototypes
void I2C_Init(void);
void UART_Init(void);
void SHT4x_Read(SensorData *data);
void SGP40_ReadRaw(SensorData *data);
void UART_SendString(char *str);

#endif

#endif /* SGP40SHT4X_H_ */
